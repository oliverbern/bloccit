<h1><%= @post.title %></h1>

<div class="row">

 <div class="col-md-2">
	<%= image_tag(@post.postimage) %>
</div>
  <div class="col-md-6">
    <p><%= @post.body %></p>
  </div>

 

  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>

  	<h3>Comments:</h3>
  <% @post.comments.each do |comment| %>
  	
  	<p><%= comment.comment %></p>
    <p><%= comment.user_id %></p>
 	<% end %>

  <% if user_signed_in?  %>
 	<%= render({partial: 'comments/form', locals: {topic: @topic, post: @post}}) %>
  <% end %>